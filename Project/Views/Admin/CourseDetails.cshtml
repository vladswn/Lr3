            {
                <table class="table-bordered">
                    <tr>
                        <th>Имя</th>
                        <th>Фамилия</th>
                        <th>E-mail</th>
                    </tr>
                    <tr>
                        <td>@us.Name</td>
                        <td>@us.Surname</td>
                        <td>@us.Email</td>
                    </tr>
                </table>
            }
        </dd>
