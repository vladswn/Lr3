@model Course

@{
    Layout = "~/Views/Shared/_AdminDetailPage.cshtml";
}

<div>
    <h4>Course</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Category.Title)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Category.Title)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Title)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Title)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.DescriptionCourse)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.DescriptionCourse)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.ImagePath)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ImagePath)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.SrartDate)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.SrartDate)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.EndDate)
