@using (Html.BeginForm("Send", "Home", FormMethod.Post))
{
    <div class="row"  style="border:2px solid #F5F5F5;margin-top:20px;margin-bottom:20px;border-radius:2px;
        box-shadow: 0px 0px 27px -4px rgba(107,109,110,1);">
        <div class="col-md-12">
            <div class="row">
                <div class="col-md-12">
                    <br />
                    <p><h3>Як до Вас звертатися?</h3> </p>
                    @Html.TextBox("yourName", null, new { @class = "form-control" })
                </div>
            </div>
            <div class="row">
                <div class="col-md-12">
                    <p><h3>E-mail?:</h3> </p>
                    @Html.TextBox("from", null, new { @class = "form-control" })
                </div>

                <div class="row">
                    <div class="col-md-12">
                        <p><h3>Ваше запитання:</h3> </p>
                        @Html.TextArea("body", htmlAttributes: new { @class= "form-control", @style ="height:170px;" })
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-8">
                    </div>
                    <div class="col-md-4">
                        <br />
                        <input type="submit" value="Відправити" class="btn btn-default btn-lg" />
                    </div>
                </div>
                <br />
            </div>

        </div>
    </div>
}


