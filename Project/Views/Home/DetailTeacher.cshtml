@model Project.Models.Teacher

@{
    Layout = "~/Views/Shared/_LayoutDetailPage.cshtml";
}

<div class="container" style="margin-top:50px;">
    <div class="row" style="margin-top: 20px;
             border: 1px solid #d9d9d9;
             background: #e6e6e6;">
        <div class="col-md-3" style="padding:5px;">
            @if (Model.ImagePath == null)
            {
                <img src="http://pingendo.github.io/pingendo-bootstrap/assets/user_placeholder.png" class="center-block img-responsive" />
            }
            else
            {
                <img src="@Url.Content(Model.ImagePath)" alt="image" class="center-block img-responsive" />
            }

        </div>
        <div class="col-md-8 col-md-offset-1" >
            <h3>@Model.Surname @Model.Name @Model.Patronymic </h3>
            <dl>
                <dt>E-mail </dt>
                <dd>
                    @Model.E_mail
                </dd>
                <dt>Telephone</dt>
                <dd>
                    @Model.Telephone
                </dd>
                <dt>Должность</dt>
                <dd>
                    @Model.Position.Title
                </dd>
            </dl>

        </div>
    </div>

    <div class="row" style="margin-top: 10px;
             border: 1px solid #d9d9d9;
             background: #e6e6e6;
             margin-bottom:20px;">
        <div class="col-md-12">
            @Html.DisplayFor(model=> model.Description)
        </div>
    </div>
</div>
