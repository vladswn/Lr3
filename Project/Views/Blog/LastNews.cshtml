@model IEnumerable<Project.Models.Blog>


@foreach (var item in Model)
{
    <div class="col-sm-6 col-md-3 visible-lg-block visible-md-block">
        <div class="thumbnail">
            <br />
            @if (item.ImagePath != null)
            {
                <img src="@Url.Content(item.ImagePath)" alt="image" class="img-responsive" style="height:180px;" />
            }
            else
            {
                <img src="data:image/svg+xml;base64," style="height:180px;" />
            }
          
            <div class="caption">
                <h3>@Html.DisplayFor(model=> item.Title)</h3>
                <p>
                    @Html.DisplayFor(model=> item.ShortDescription)
                </p>
                <p>
                    @*<a href="#" class="btn btn-primary" role="button">About</a>*@
                    @Html.ActionLink("Читати детальніше", "Posts", "Blog", new { id = item.BlogId }, new { @class= "btn btn-primary" })
                </p>
            </div>
        </div>
    </div>

    <div class="col-sm-6 col-md-3 visible-xs-block visible-sm-block">
        <div class="thumbnail">
            <br />
            @if (item.ImagePath != null)
            {
                <img src="@Url.Content(item.ImagePath)" alt="image" class="img-responsive" />
            }
            else
            {
                <img src="data:image/svg+xml;base64," />
            }

            <div class="caption">
                <h3>@Html.DisplayFor(model => item.Title)</h3>
                <p>
                    @Html.DisplayFor(model => item.ShortDescription)
                </p>
                <p>
                    @*<a href="#" class="btn btn-primary" role="button">About</a>*@
                    @Html.ActionLink("Читати детальніше", "Posts", "Blog", new { id = item.BlogId }, new { @class = "btn btn-primary" })
                </p>
            </div>
        </div>
    </div>
}