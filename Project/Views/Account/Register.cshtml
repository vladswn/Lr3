@model Project.Models.RegisterViewModel
@{
    ViewBag.Title = "Реєстрація";
    Layout = "~/Views/Shared/_LayoutDetailPage.cshtml";
}


@using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary("", new { @class = "text-danger" })
    <div class="row" style="margin-top:100px;margin-bottom:80px;">
        <div class="col-md-4"></div>
        <div class="col-md-4" style="border:2px solid #F5F5F5;border-radius:2px;
        box-shadow: 0px 0px 27px -4px rgba(107,109,110,1);">
            <div class="row">
                <div class="col-md-12">
                    <h2>Реєстрація нового користувача</h2>
                </div>
            </div>
            <br />
            <div class="row">
                <div class="col-md-4">
                    @Html.LabelFor(m => m.Surname)
                </div>
                <div class="col-md-8">
                    @Html.TextBoxFor(m => m.Surname, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.Surname, "", new { @class = "text-danger" })
                </div>
            </div>
            <br />
            <div class="row">
                <div class="col-md-4">
                    @Html.LabelFor(m => m.Name)
                </div>
                <div class="col-md-8">
                    @Html.TextBoxFor(m => m.Name, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.Name, "", new { @class = "text-danger" })
                </div>
            </div>

            <br />
            <div class="row">
                <div class="col-md-4">
                    @Html.LabelFor(m => m.Email)
                </div>
                <div class="col-md-8">
                    @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m=> m.Email, "", new { @class = "text-danger" })
                </div>
            </div>
            <br />
            <div class="row">
                <div class="col-md-4">
                    @Html.LabelFor(m => m.Password)
                </div>
                <div class="col-md-8">
                    @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                </div>
            </div>
            <br />
            <div class="row">
                <div class="col-md-4">
                    @Html.LabelFor(m => m.ConfirmPassword)
                </div>
                <div class="col-md-8">
                    @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.ConfirmPassword, "", new { @class = "text-danger" })
                </div>
            </div>
            <br />
            <div class="row">
                <div class="col-md-8"></div>
                <div class="col-md-4">
                    <input type="submit" value="Реєстрація" class="btn btn-default" style="width:115px;" />
                </div>
            </div>
            <br />

        </div>
        <div class="col-md-4"></div>
    </div>
}

